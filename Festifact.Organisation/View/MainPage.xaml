<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Festifact.Organisation.MainPage">
    <Grid
        ColumnSpacing="5"
        RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Text="Manage festivals"
                Grid.Row="0"
                HeightRequest="100"
                Style="{StaticResource ButtonOutline}"
                Margin="8"/>
        <Button Text="Manage executors (Artists and movies)"
                Grid.Row="1"
                HeightRequest="100"
                Style="{StaticResource ButtonOutline}"
                Margin="8"/>
        <Button Text="Manage locations"
                HeightRequest="100"
                Grid.Row="2"
                Style="{StaticResource ButtonOutline}"
                Margin="8"/>
    </Grid>
</ContentPage>
